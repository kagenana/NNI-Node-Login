@import '../../../views/stylesheets/style.styl'

tbody
  td
    .del
      text-decoration none
      color blue + 35% + 180deg
      float right
      &:hover
        color red

#ctrl
  width 950px
  text-align center
  margin-top -2.5em
  a
    color white -10%
    font-size 1.8em
    text-decoration none
    &:hover
      color @color + 111%

#js
  #addfrm
    display none
    
#addfrm
  width 420px
  label
    display block
    float left
    width 100px
    font-weight bold
  .btns
    text-align center
  label.error
    width 120px
    float right
    font-size 0.8em
    margin 5px 0px 0px 0px
    text-align: left;
    border-bottom: 1px dotted #333;
    color: #FF0000;  
